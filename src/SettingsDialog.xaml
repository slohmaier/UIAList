<ContentDialog
    x:Class="UIAList.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="UIAList Settings"
    PrimaryButtonText="OK"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    PrimaryButtonClick="OnPrimaryButtonClick"
    CloseButtonClick="OnCloseButtonClick">

    <StackPanel Spacing="16" Padding="16">
        <!-- Auto-start checkbox -->
        <CheckBox x:Name="AutoStartCheckBox"
                  Content="Start automatically when Windows starts"
                  AutomationProperties.Name="Auto-start with Windows"
                  AutomationProperties.HelpText="When checked, UIAList will start automatically when Windows starts"/>

        <!-- Default action combo box -->
        <StackPanel Spacing="8">
            <TextBlock Text="Default action when pressing Enter:"
                       FontWeight="SemiBold"/>
            <ComboBox x:Name="DefaultActionComboBox"
                      MinWidth="200"
                      HorizontalAlignment="Left"
                      AutomationProperties.Name="Default action"
                      AutomationProperties.HelpText="Choose what action to perform when pressing Enter on a UI element">
                <ComboBoxItem Content="Click" Tag="0"/>
                <ComboBoxItem Content="Double Click" Tag="1"/>
                <ComboBoxItem Content="Focus" Tag="2"/>
            </ComboBox>
        </StackPanel>

        <!-- Shortcut key editor -->
        <StackPanel Spacing="8">
            <TextBlock Text="Global shortcut key:"
                       FontWeight="SemiBold"/>
            <Button x:Name="ShortcutButton"
                    Content="Ctrl+Alt+U"
                    MinWidth="200"
                    HorizontalAlignment="Left"
                    Click="OnShortcutButtonClick"
                    AutomationProperties.Name="Change shortcut key"
                    AutomationProperties.HelpText="Click to change shortcut, then press the desired key combination"/>
            <TextBlock x:Name="ShortcutHintText"
                       Text="Click button and press new key combination"
                       FontSize="12"
                       Foreground="{ThemeResource SystemColorGrayTextColor}"
                       Visibility="Collapsed"/>
        </StackPanel>
    </StackPanel>
</ContentDialog>
