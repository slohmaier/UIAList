<ContentDialog
    x:Class="UIAList.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="About UIAList"
    CloseButtonText="Close"
    DefaultButton="Close">

    <ScrollViewer MaxHeight="500">
        <StackPanel Spacing="16" Padding="16">
            <!-- App Icon and Name -->
            <StackPanel HorizontalAlignment="Center" Spacing="8">
                <TextBlock Text="UIAList"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Version 0.2.0"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Foreground="{ThemeResource SystemColorGrayTextColor}"/>
            </StackPanel>

            <!-- Description -->
            <TextBlock TextWrapping="Wrap">
                <Run Text="Accessibility Tool for Screen Reader Users"/>
                <LineBreak/><LineBreak/>
                <Run Text="UIAList is designed for blind and visually impaired users who rely on screen readers like JAWS, NVDA, or Windows Narrator. This application lists all controls by name and type for the current application with search functionality to quickly find and interact with controls."/>
            </TextBlock>

            <!-- Copyright -->
            <TextBlock TextWrapping="Wrap">
                <Run Text="Copyright Â© 2025 Stefan Lohmaier"/>
                <LineBreak/>
                <Run Text="Licensed under GNU General Public License v3.0"/>
            </TextBlock>

            <!-- Technology -->
            <StackPanel Spacing="8">
                <TextBlock Text="Technology" FontWeight="SemiBold"/>
                <TextBlock TextWrapping="Wrap">
                    <Run Text="Built with WinUI 3 and C++/WinRT"/>
                    <LineBreak/>
                    <Run Text="Uses Microsoft UI Automation for control discovery"/>
                    <LineBreak/>
                    <Run Text="Zero LGPL dependencies - fully open for commercial use"/>
                </TextBlock>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Spacing="8">
                <Button x:Name="ResetSettingsButton"
                        Content="Reset All Settings"
                        Click="OnResetSettingsClick"
                        HorizontalAlignment="Left"/>
                <TextBlock Text="Warning: This will reset all settings to defaults"
                           FontSize="12"
                           Foreground="{ThemeResource SystemColorGrayTextColor}"/>
            </StackPanel>

            <!-- Links -->
            <StackPanel Spacing="4">
                <HyperlinkButton Content="View on GitHub"
                                NavigateUri="https://github.com/slohmaier/UIAList"/>
                <HyperlinkButton Content="Report an Issue"
                                NavigateUri="https://github.com/slohmaier/UIAList/issues"/>
            </StackPanel>

            <!-- Credits -->
            <TextBlock TextWrapping="Wrap"
                       FontSize="12"
                       Foreground="{ThemeResource SystemColorGrayTextColor}">
                <Run Text="Developed with Claude Code by Anthropic"/>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
