<ContentDialog
    x:Class="UIAList.WelcomeDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Welcome to UIAList"
    PrimaryButtonText="Get Started"
    DefaultButton="Primary"
    PrimaryButtonClick="OnGetStartedClick">

    <ScrollViewer MaxHeight="500">
        <StackPanel Spacing="16" Padding="16">
            <!-- Welcome message -->
            <TextBlock Text="Welcome to UIAList!"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>

            <TextBlock TextWrapping="Wrap">
                <Run Text="UIAList is an accessibility tool designed specifically for blind and visually impaired users who rely on screen readers like JAWS, NVDA, or Windows Narrator."/>
            </TextBlock>

            <!-- Key features -->
            <StackPanel Spacing="8">
                <TextBlock Text="Key Features:" FontWeight="SemiBold"/>
                <StackPanel Spacing="4" Margin="16,0,0,0">
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="• "/>
                        <Run Text="Instant Control Listing" FontWeight="SemiBold"/>
                        <Run Text=" - See all controls in any application window at once"/>
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="• "/>
                        <Run Text="Smart Search" FontWeight="SemiBold"/>
                        <Run Text=" - Filter controls by name or type in real-time"/>
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="• "/>
                        <Run Text="Keyboard Navigation" FontWeight="SemiBold"/>
                        <Run Text=" - Use arrow keys to navigate, Enter to activate"/>
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="• "/>
                        <Run Text="Direct Interaction" FontWeight="SemiBold"/>
                        <Run Text=" - Click, focus, or double-click any control directly"/>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- How to use -->
            <StackPanel Spacing="8">
                <TextBlock Text="How to Use:" FontWeight="SemiBold"/>
                <StackPanel Spacing="4" Margin="16,0,0,0">
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="1. Press "/>
                        <Run Text="Ctrl+Alt+U" FontWeight="Bold"/>
                        <Run Text=" from any application"/>
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="2. Type to filter controls (e.g., 'button save')"/>
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="3. Use "/>
                        <Run Text="Up/Down arrows" FontWeight="Bold"/>
                        <Run Text=" to navigate results"/>
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="4. Press "/>
                        <Run Text="Enter" FontWeight="Bold"/>
                        <Run Text=" to activate the selected control"/>
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="5. Press "/>
                        <Run Text="Escape" FontWeight="Bold"/>
                        <Run Text=" to close the window"/>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- Keyboard shortcuts -->
            <StackPanel Spacing="8">
                <TextBlock Text="Keyboard Shortcuts:" FontWeight="SemiBold"/>
                <StackPanel Spacing="4" Margin="16,0,0,0">
                    <TextBlock Text="• Alt+C - Click selected control"/>
                    <TextBlock Text="• Alt+D - Double-click selected control"/>
                    <TextBlock Text="• Alt+F - Focus selected control"/>
                </StackPanel>
            </StackPanel>

            <!-- Additional info -->
            <TextBlock TextWrapping="Wrap"
                       FontSize="12"
                       Foreground="{ThemeResource SystemColorGrayTextColor}">
                <Run Text="UIAList runs in the system tray and is always ready. You can access settings by right-clicking the tray icon."/>
            </TextBlock>

            <!-- Checkbox to not show again -->
            <CheckBox x:Name="DontShowAgainCheckBox"
                      Content="Don't show this welcome message again"
                      IsChecked="True"/>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
