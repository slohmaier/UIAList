<Window
    x:Class="UIAList.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="UIAList - Screen Reader Control Navigator"
    Width="600" Height="450">

    <Grid Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Window Title Label -->
        <TextBlock x:Name="WindowTitleLabel"
                   Grid.Row="0"
                   Text="No window selected"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,12"
                   AutomationProperties.Name="Window Title"
                   TextWrapping="Wrap"/>

        <!-- Filter/Search Box -->
        <TextBox x:Name="FilterTextBox"
                 Grid.Row="1"
                 PlaceholderText="Filter controls..."
                 Margin="0,0,0,12"
                 AutomationProperties.Name="Filter controls"
                 TextChanged="FilterTextBox_TextChanged"
                 KeyDown="FilterTextBox_KeyDown"/>

        <!-- Controls List -->
        <ListView x:Name="ControlsListView"
                  Grid.Row="2"
                  SelectionMode="Single"
                  IsItemClickEnabled="False"
                  Margin="0,0,0,12"
                  AutomationProperties.Name="Controls list"
                  SelectionChanged="ControlsListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayText}"
                               TextWrapping="Wrap"
                               Padding="4"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Filter Options -->
        <StackPanel Grid.Row="3" Margin="0,0,0,12">
            <CheckBox x:Name="HideEmptyTitlesCheckBox"
                      Content="Hide controls with no or empty title"
                      IsChecked="True"
                      Checked="FilterOption_Changed"
                      Unchecked="FilterOption_Changed"
                      AutomationProperties.Name="Hide controls with no or empty title"/>
            <CheckBox x:Name="HideMenusCheckBox"
                      Content="Hide menus and menu items"
                      IsChecked="True"
                      Margin="0,8,0,0"
                      Checked="FilterOption_Changed"
                      Unchecked="FilterOption_Changed"
                      AutomationProperties.Name="Hide menus and menu items"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    Spacing="8"
                    Margin="0,0,0,8">
            <Button x:Name="DoubleClickButton"
                    Content="_Double Click"
                    Click="DoubleClickButton_Click"
                    IsEnabled="False"
                    AutomationProperties.Name="Double Click"
                    AutomationProperties.AcceleratorKey="Alt+D"
                    AccessKey="D"
                    MinWidth="120"/>
            <Button x:Name="ClickButton"
                    Content="_Click"
                    Click="ClickButton_Click"
                    IsEnabled="False"
                    AutomationProperties.Name="Click"
                    AutomationProperties.AcceleratorKey="Alt+C"
                    AccessKey="C"
                    MinWidth="120"/>
            <Button x:Name="FocusButton"
                    Content="_Focus"
                    Click="FocusButton_Click"
                    IsEnabled="False"
                    AutomationProperties.Name="Focus"
                    AutomationProperties.AcceleratorKey="Alt+F"
                    AccessKey="F"
                    MinWidth="120"/>
        </StackPanel>

        <!-- Loading Overlay (hidden by default) -->
        <Grid x:Name="LoadingOverlay"
              Grid.RowSpan="6"
              Background="{ThemeResource LayerFillColorDefaultBrush}"
              Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="16">
                <TextBlock Text="Listing controls..."
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                <ProgressRing IsActive="True"
                              Width="60"
                              Height="60"/>
                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Click="CancelButton_Click"
                        HorizontalAlignment="Center"
                        MinWidth="100"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
